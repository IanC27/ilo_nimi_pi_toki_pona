{
    "name": "ilo nimi pi toki pona",
    "description": "find definitions for Toki Pona words in English",
    "version": "0.2",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
    ],
    "options_page": "options.html"
}