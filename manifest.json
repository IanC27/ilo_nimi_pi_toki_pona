{
    "name": "Toki Pona Dictionary",
    "description": "find definitions for Toki Pona words",
    "version": "0.3",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/assets/tokipona16.png",
            "32": "/assets/tokipona32.png",
            "48": "/assets/tokipona48.png",
            "128": "/assets/tokipona128.png"
        }
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
    ],
    "options_page": "options.html",
    "icons": {
        "16": "/assets/tokipona16.png",
        "32": "/assets/tokipona32.png",
        "48": "/assets/tokipona48.png",
        "128": "/assets/tokipona128.png"
    }
}